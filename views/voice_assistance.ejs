/* voice button with Glowing Animation */
.mic {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
  z-index: 2;
  
}


.mic i {
  position: absolute;
  z-index: 3;
  bottom: -120%;
  left: -220%;
  font-size: 12rem;
}

.mic::before,
.mic::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 100%;
  z-index: 2;
  box-shadow: 0 0 20px 20px #1c084f;
  animation: circle-rotate 3s linear infinite;
}

.mic::before{
  width:  400px;
  height: 400px;
  background: linear-gradient(to right, #1a084e, #660033, #ff0033, #ff6600, #ffcc00, #00cc66, #0099cc, #9933cc, #1a084e);
  background-size: 1800% 1800%;
  animation: circle-glow 3s linear infinite, circle-gradient 15s ease-in-out infinite;
}

.mic::after{
  width:  250px;
  height: 250px;
  background-color: #2f1e5f;
  animation: circle-size 0.8s linear infinite alternate;
}

@keyframes circle-rotate {
  0% {
    transform: translate(-50%,-50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%,-50%) rotate(360deg);
  }
}

@keyframes circle-glow {
  0% {
    box-shadow: 0 0 20px 20px #1c084f;
  }
  50% {
    box-shadow: 0 0 50px 30px #1c084f;
  }
  100% {
    box-shadow: 0 0 20px 20px #1c084f;
  }
}

@keyframes circle-size {
  0% {
    width: 250px;
    height: 250px;
  }
  50% {
    width: 300px;
    height: 300px;
  }
  100% {
    width: 250px;
    height: 250px;
  }
}

@keyframes circle-gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

